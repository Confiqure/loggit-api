{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "lib": ["es6", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "esnext"
  },
  "include": ["src"]
}
